    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script type="text/javascript">
        toastr["success"]("@TempData[ToastrKeys.Create]");
    </script>

    // clear tempdata
   // TempData[ToastrKeys.Create] = null;
}

 else if(TempData[ToastrKeys.Update] is not null)
