@model CreatedRole

<form asp-action="Create" method="post" class=" mb-3   ">
        <label asp-for="roleName" class="form-label">Role Name</label>
    <div class="d-flex justify-content-between align-items-center">

    <div class="flex-grow-1 me-2  ">
        <input type="text" class="form-control" asp-for="roleName" placeholder="Enter Role Name" required>
        <span asp-validation-for="roleName" class="text-danger"></span>
    </div>

        <div class="ml-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg"></i> Create
        </button>
    </div>

    </div>
</form>
