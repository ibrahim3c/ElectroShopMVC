@using Microsoft.AspNetCore.Identity;
@{
    Layout = "_Dashboard";
    ViewBag.CardTitle = "Roles List";
    ViewBag.Title = "Role Management";
}
@model IEnumerable<IdentityRole>

<partial name="_Create" model="new CreatedRole()"></partial>

<table class="table table-striped table-hover mt-4">
    <thead class="table-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Role Name</th>
            <th scope="col" class="text-center">Action</th> <!-- Center aligned action buttons -->
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td class="text-center">
                    <a onclick="DeleteRole(event)" data-role-id="@role.Id" class="btn btn-danger btn-sm " style="color:white">
                        <!-- Add margin-right (me-2) for spacing -->
                        <i class="fas fa-trash"></i> Delete
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script src="~/js/deleteRole.js" asp-append-version="true"></script>

}

