@{
    Layout = "_Dashboard";
    ViewBag.CardTitle = "Product List";
    ViewBag.Title = "Product Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <a asp-area="Admin" asp-action="Create" class="btn btn-info">
        <i class="fas fa-plus"></i> Create New Product
    </a>
</div>

<table id="product-table" class="table table-striped table-hover mt-4">
    <thead class="table-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col" class="text-center">Action</th> <!-- Center aligned action buttons -->
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/products.js"></script>
    <script src="~/js/deleteProduct.js"></script>
}
