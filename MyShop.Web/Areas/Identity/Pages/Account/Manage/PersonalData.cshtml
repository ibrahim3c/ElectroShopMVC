@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="row">
    <div class="col-md-8 col-lg-6">
        <div class="mb-4">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <p class="text-danger font-weight-bold">
                Deleting this data will permanently remove your account, and this cannot be recovered.
            </p>
        </div>

        <div class="mb-3">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="d-inline">
                <button class="btn btn-primary" type="submit">Download Personal Data</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger ml-2">Delete Personal Data</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
